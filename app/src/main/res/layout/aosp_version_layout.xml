<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@android:color/black"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"/>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="50dp"
        android:scaleType="centerCrop"
        android:contentDescription="@android:string/autofill"/>

    <Button
        android:id="@+id/btnSource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Source"
        android:layout_below="@+id/tvApi"
        android:layout_toEndOf="@+id/btnActivity"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:backgroundTint="@color/green"

        />

    <Button
        android:id="@+id/btnActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:layout_below="@+id/tvApi"
        android:layout_toEndOf="@+id/icon"
        android:layout_marginTop="10dp"

        />

    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/icon"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/tvDessert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_toEndOf="@+id/icon"
        android:layout_below="@+id/tvVersion"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/tvLaunch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/tvApi"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="170dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/tvApi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_toEndOf="@+id/icon"
        android:layout_below="@+id/tvDessert"
        android:textColor="@color/white"
        />

</RelativeLayout>